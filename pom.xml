  <build>
    <finalName>${project.artifactId}-${git.commit.id.describe-short}</finalName>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>src</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
        <!-- If needed: include log4j config -->
      <resource>
        <directory>src/de/bielefeld/umweltamt/aui/resources/config/</directory>
        <includes>
          <include>log4j2.xml</include>
        </includes>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <configuration>
          <mainClass>de.bielefeld.umweltamt.aui.AUIKataster</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>11</source>
          <target>11</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <archive>
            <manifest>
              <mainClass>de.bielefeld.umweltamt.aui.AUIKataster</mainClass>
            </manifest>
          </archive>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    <!-- Jasper compiler-->
    <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>jasperreports-maven-plugin</artifactId>
      <version>1.0-beta-2</version>
      <configuration>
        <sourceDirectory>src/de/bielefeld/umweltamt/aui/resources</sourceDirectory>
        <outputDirectory>${project.build.directory}/classes/de/bielefeld/umweltamt/aui/resources/</outputDirectory>
      </configuration>
      <executions>
        <execution>
          <phase>compile</phase>
            <goals>
              <goal>compile-reports</goal>
            </goals>
        </execution>
      </executions>
      <dependencies>
          <dependency>
              <groupId>net.sf.jasperreports</groupId>
              <artifactId>jasperreports</artifactId>
              <version>${jasper.version}</version>
          </dependency>
          <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>2.0.1</version>
            <scope>compile</scope>
            <optional>true</optional>
          </dependency>
        </dependencies>
      </plugin>

      <!--install local jars via install plugin,
        use "mvn validate" before compiling -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.5.1</version>
        <executions>
          <!-- Install local repacked jasperreports jar file-->
          <execution>
            <id>install-fonts</id>
            <goals>
              <goal>install-file</goal>
            </goals>
            <phase>validate</phase>
            <configuration>
              <groupId>de.bielefeld.umweltamt.aui</groupId>
              <artifactId>jasperreports-auik-font-repack</artifactId>
              <version>1.0.0</version>
              <packaging>jar</packaging>
              <file>${project.basedir}/lib/jasperreports-auik-font-repack.jar</file>
              <generatePom>true</generatePom>
          </configuration>
          </execution>
        </executions>
      </plugin>

      <!--Copy all dependencies to the maven_lib folder-->
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <phase>compile</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>maven_lib</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!--maven git commit id plugin-->
      <plugin>
        <groupId>pl.project13.maven</groupId>
        <artifactId>git-commit-id-plugin</artifactId>
        <version>4.0.0</version>
        <executions>
          <execution>
            <id>get-the-git-infos</id>
            <goals>
              <goal>revision</goal>
            </goals>
            <phase>validate</phase>
          </execution>
        </executions>
        <configuration>
          <dotGitDirectory>${project.basedir}/.git</dotGitDirectory>
        </configuration>
      </plugin>
      <!--Put git hash in the jar META-INF/MANIFEST.MF -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <SCM-Revision>${git.commit.id.describe-short}</SCM-Revision>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <phase>install</phase>
            <configuration>
              <target>
                <echo>Copy ${project.artifactId}-${git.commit.id.describe-short}-jar-with-dependencies.jar to  X:\Applikationen\Anlagenkataster\AUIK\${project.artifactId}-${git.commit.id.describe-short}.jar</echo>
                <copy file="target/${project.artifactId}-${git.commit.id.describe-short}-jar-with-dependencies.jar" tofile="X:\Applikationen\Anlagenkataster\AUIK\${project.artifactId}-${git.commit.id.describe-short}.jar" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>
